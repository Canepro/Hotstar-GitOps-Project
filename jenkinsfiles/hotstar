pipeline {
    agent any 

    stages {
        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        stage('Checkout from Git') {
            steps {
                script {
                    try {
                        git branch: 'master', url: 'https://github.com/canepro/Hotstar-GitOps-Project.git'
                    } catch (Exception e) {
                        error("Failed to checkout repository: ${e.getMessage()}")
                    }
                }
            }
        }
        stage("List Files") {
            steps {
                sh 'ls -la'
            }
        }
        stage("Docker Image Build") {
            steps {
                script {
                    try {
                        sh 'docker system prune -f || true'
                        sh 'docker container prune -f || true'
                        sh 'docker build -t hotstar .'
                    } catch (Exception e) {
                        error("Docker build failed: ${e.getMessage()}")
                    }
                }
            }
        }
        stage("ECR Image Pushing") {
            steps {
                script {
                    try {
                        sh '''
                        set -e
                        #Retrieve an authentication token and authenticate your Docker client to your registry. Use the AWS CLI:
                        aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin 534208808141.dkr.ecr.us-east-1.amazonaws.com

                        #After the build completes, tag your image so you can push the image to this repository:
                        docker tag hotstar:latest 534208808141.dkr.ecr.us-east-1.amazonaws.com/hotstar:${BUILD_NUMBER}

                        #Run the following command to push this image to your newly created AWS repository:
                        docker push 534208808141.dkr.ecr.us-east-1.amazonaws.com/hotstar:${BUILD_NUMBER}
                        '''
                    } catch (Exception e) {
                        error("ECR push failed: ${e.getMessage()}")
                    }
                }
            }
        }
        stage('Update Deployment file') {
            environment {
                GIT_REPO_NAME = "Hotstar-GitOps-Project"
                GIT_EMAIL = "mogah.vincent@hotmail.com"
                GIT_USER_NAME = "canepro"
                IMAGE_NAME = "hotstar"
                REPO_URL = "534208808141.dkr.ecr.us-east-1.amazonaws.com/hotstar"
                YAML_FILE = "deployment.yml"
            }
            steps {
                dir('kubernetes-files') {
                    withCredentials([string(credentialsId: 'my-git-pattoken', variable: 'git_token')]) {
                        script {
                            try {
                                sh '''
                                    set -e
                                    git config user.email "${GIT_EMAIL}"
                                    git config user.name "${GIT_USER_NAME}"
                                    BUILD_NUMBER=${BUILD_NUMBER}
                                    echo $BUILD_NUMBER

                                    # push this image to your git hub
                                    sed -i "s#image:.*#image: ${REPO_URL}:$BUILD_NUMBER#g" ${YAML_FILE}
                                    git add .
                                    git commit -m "Update ${IMAGE_NAME} Image to version ${BUILD_NUMBER}" || exit 0
                                    git push https://${git_token}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:master
                                '''
                            } catch (Exception e) {
                                error("Failed to update deployment file: ${e.getMessage()}")
                            }
                        }
                    }
                }
            }
        }
    }
}
